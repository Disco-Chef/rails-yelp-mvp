<h2>Restaurant: <%= @restaurant.name %></h2>
<h2>Category: <%= @restaurant.category %></h2>
<p>Address: <%= @restaurant.address %></p>
<p>Phone Number: <%= @restaurant.phone_number %></p>
<% @restaurant.reviews.each do |review| %>
  <h2>Review: <%= review.content %></h2>
  <p>Rating: <%= review.rating %></p>
<% end  %>

<%= link_to "edit restaurant details", edit_restaurant_path(@restaurant), class: "btn btn-warning" %>
<%= link_to "delete", restaurant_path(@restaurant), class: "btn btn-danger", method: :delete %>
<%= link_to "all restaurants", restaurants_path, class: "btn btn-primary" %>
<%= link_to "add a review", new_restaurant_review_path(@restaurant),  class: "btn btn-warning" %>
